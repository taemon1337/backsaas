# BackSaas Development Environment Variables
# Copy this file to .env for local development

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/backsaas?sslmode=disable
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=backsaas

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Platform API Configuration
PLATFORM_API_PORT=8080
PLATFORM_API_DATABASE_URL=postgres://postgres:postgres@postgres:5432/backsaas?sslmode=disable
PLATFORM_API_TENANT_ID=system
PLATFORM_API_SCHEMA_SOURCE=file
PLATFORM_API_SCHEMA_PATH=/app/schemas/platform.yaml

# API Gateway Configuration
API_GATEWAY_PORT=8000
API_GATEWAY_PLATFORM_API_URL=http://platform-api:8080
JWT_SECRET=your-jwt-secret-key-change-in-production

# Test Tenant API Configuration
TEST_TENANT_API_PORT=8081
TEST_TENANT_DATABASE_URL=postgres://postgres:postgres@postgres:5432/backsaas?sslmode=disable
TEST_TENANT_ID=test-tenant
TEST_TENANT_SCHEMA_PATH=/app/testdata/sample-crm.yaml

# Logging Configuration
LOG_LEVEL=debug

# Development Tools
ADMINER_PORT=8082
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin

# CLI Configuration
BACKSAAS_API_URL=http://localhost:8000
BACKSAAS_PLATFORM_API_URL=http://localhost:8080
